<div class="container" style="width:680px;">
  <div class="mt-2 text-center">
    <h1>請修改你的支出</h1>
    <p><span style="color:red;">*</span>為必填欄位</p>
  </div>
  <form action="/records/{{record._id}}/edit/?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">名稱<span style="color:red;">*</span>:</label>
      <input type="text" class="form-control" id="name" name="name" aria-describedby="name" value={{record.name}}
        required>
    </div>
    <div class="form-group">
      <label for="name">日期<span style="color:red;">*</span>:</label>
      <input type="date" class="form-control" id="date" name="date" aria-describedby="date" value={{date}} required>
    </div>
    <div class="form-group">
      <label for="category">類別<span style="color:red;">*</span>:</label>
      <select class="form-control" id="category" name="category">
        {{#each categories}}
        {{selectOption ../category this.name }}
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="amount">金額<span style="color:red;">*</span>:</label>
      <input type="number" class="form-control" id="amount" name="amount" min="0" aria-describedby="amount"
        value={{record.amount}} required>
    </div>
    <div class="form-group">
      <label for="merchant">商家:</label>
      <input type="text" class="form-control" id="merchant" name="merchant" aria-describedby="merchant"
        value={{record.merchant}}>
    </div>
    <div class="mt-2 mx-auto text-center">
      <button type="submit" class="btn btn-primary">送出</button>
    </div>
  </form>